<div class="events-wrapper">
  <div class="container">
    <div class="center-inner">
			<div class="events">
				<div class="form-error">
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
					<% end %>
				</div>
        <div class="events-menu">
            <p class="menu-title">アカウント登録</p>
        </div>
        <div class="events-display">
          <%= form_with model: @user, url:"/users/create" do |f| %>
            <div class="form-group">
              <%= f.text_field :name, class:"group-text", placeholder:"メールアドレス" %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, class:"group-text",placeholder:"メールアドレス" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class:"group-text",placeholder:"パスワード" %>
            </div>
            <div class="form-group">
              <%= f.submit value:"アカウントを作成する",class:"btn signup" %>
              <%= link_to("戻る", "/home/top", class: "btn") %>
            </div>
          <% end %>
        </div>
    	</div>
  	</div>
	</div>
</div>
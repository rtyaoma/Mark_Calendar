<div class="main user-show">
  <div class="container">
  <h1>Users#show</h1>
<p>Find me in app/views/users/showedit.html.erb</p>
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>" >
      <h2><%= @user.name%></h2>
      <p><%= @user.email%></p>
      <% if @user.id == @current_user.id %>
      <%= link_to("編集","/users/#{@user.id}/edit") %>
      <% end %>
    </div>

    <% @user.events.each do |event| %>
            <div class="events-index-item">
        <div class="event-left">
          <img src="<%= "/user_images/#{event.user.image_name}" %>">
        </div>
        <div class="event-right">
          <div class="event-user-name">
            <%= link_to(event.user.name, "/users/#{event.user.id}") %>
          </div>
          <%= link_to(event.title, "/events/#{event.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
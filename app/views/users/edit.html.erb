<div class="events-wrapper">
  <div class="container">
    <div class="center-inner">
			<div class="events">
        <div class="events-menu">
            <p class="menu-title">アカウント編集</p>
        </div>
        <div class="events-display">
          <%= form_with model: @user, local:true, multipart: true do |f| %>
            <div class="main-select">
            <%= render 'layouts/error_messages', model: f.object %>
              <div class="form-group form-check">
                <%= link_to('',events_path, class:"fas fa-2x fa-arrow-left back-icon") %>
                <button type="submit" class="submit"><i class="fas fa-2x fa-check"></i></button>
              </div>
              <div class="form-group">
                <%= f.text_field :name, class:"group-text", placeholder:"ユーザー名" %>
              </div>
              <div class="form-group">
                <%= f.email_field :email, class:"group-text",placeholder:"メールアドレス" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class:"group-text",placeholder:"パスワード" %>
              </div>
              <div class="form-group">
                <%= f.file_field :image %>
              </div>
            </div>
          <% end %>
          <div class="user_destroy">
          <%= link_to('アカウントを削除してログアウト', @user, method: :delete) %>
          </div>
        </div>
    	</div>
  	</div>
	</div>
</div>
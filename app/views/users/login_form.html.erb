<div class="events-wrapper">
  <div class="container">
    <div class="center-inner">
        <div class="events-menu">
            <p class="menu-title">login</p>
        </div>
			<div class="events-display">
				<%= form_with model: @user, local:true do |f| %>
					<div class="main-select">
							<% if @error_message %>
								<p><%= @error_message %></p>
							<% end %>
								<div class="form-group">
									<%= link_to('',"/home/top", class:"fas fa-2x fa-arrow-left back-icon") %>
								</div>
								<div class="form-group">
									<%= f.email_field :email, class:"group-text",placeholder:"メールアドレス" %>
								</div>
								<div class="form-group">
									<%= f.password_field :password,class:"group-text",placeholder:"パスワード" %>
								</div>
								<div class="form-group">
									<button type="submit" class="submit login btn login-form"><span>ログイン</span></button>
								</div>
								<div class="form-group">
									<%= link_to("アカウントがない場合は作成する", "/signup", class: "btn signup login-form-signup") %>
								</div>
						</div>
					<% end %>
        </div>
    	</div>
  	</div>
	</div>
</div>

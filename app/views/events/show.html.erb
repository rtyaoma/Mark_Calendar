<div class="container-md">
  <div =class"main">
  <%= render 'events/select' %>
    <section class="sec_content">
        <div class="split-box content_left">
            <div id="calendar" style="width:600px;height:auto;"></div>
        </div>
        <div class="split-box content_right">
            <div class="post-user-name">
                <img src="<%= "/user_images/#{@user.image_name}" %>">
                <%= link_to(@user.name, "/users/#{@user.id}") %>
            </div>
            <p><%= @event.title %></p>
            <div class="event-time">
                <%= @event.start.strftime('%Y 年 %m 月 %d 日 %H:%M') %>
                <%= @event.end.strftime('%Y 年 %m 月 %d 日 %H:%M') %>
            </div>
            <% if @event.user_id == @current_user.id %>
                <div class="event_menu">
                    <%= link_to("edit","/events/#{@event.id}/edit") %>
                    <%= link_to("Destroy", "/events/#{@event.id}/destroy", {method: "post"}) %>
                </div>
            <% end %>
        </div>
    </section>
  </div>
</div>
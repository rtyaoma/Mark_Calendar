<div class="page-main">
	<aside class="right-sidebar">
		<div class="sidebar-inner">
		<% if @current_user %>
			<ul>
				<li class="user-edit"><%= link_to("編集", edit_user_path(@current_user.id)) %></li>
				<% if @current_user.image.attached? %>
					<li class="user-image"><%= link_to(image_tag(@current_user.image), edit_user_path(@current_user.id)) %></li>
				<% else %>
					<li class="user-image"><%= link_to(image_tag("/user_images/default_user.jpg"), edit_user_path(@current_user.id)) %></li>
				<% end %>
				<li class="user-name"><p><%= @current_user.name %></p></li>
				<li class="side-inner"><%= link_to("calendar", events_path) %></li>
				<li class="side-inner"><%= link_to("task", tasks_path) %></li>
				<li class="side-inner"><%= link_to("logout", "/logout", {method: :post}) %></li>
			</ul>
		<% else %>
			<ul>
				<li class="side-inner"><%= link_to("signup", "/signup") %></li>
				<li class="side-inner"><%= link_to("login", "/login") %></li>
			</ul>
		<% end %>
		</div>
	</aside>

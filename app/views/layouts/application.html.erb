<!DOCTYPE html>
<html>
  <head>
    <title>MarkCalendar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
    <header>
      <div class="header-logo">
      <% if @current_user %>
        <%= link_to("Mark_Calender", "/events/index") %>
      <% else %>
        <%= link_to("", "/events/index") %>
      <% end %>
      <ul class="header-menus">
      <% if @current_user %>
      <li>
      <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
      </li>
        <li>
          <%= link_to("Mark_calendarとは", "/events/index") %>
        </li>
        <li>
          <%= link_to("カレンダー", "/events/index") %>
        </li>
        <li>
          <%= link_to("タスク", "/events/index") %>
        </li>
        <li>
        <%= link_to("ユーザー一覧","/users/index") %>
      </li>
      <li>
      <%= link_to("ログアウト", "/logout", {method: :post}) %>
      </li>
      <% else %>
      <li>
      <%= link_to("Mark_calendarとは", "/events/index") %>
      </li>
        <li>
          <%= link_to("ログイン","/login") %>
        </li>
        <li>
          <%= link_to("ユーザー一覧","/users/index") %>
        </li>
        <li>
        <%= link_to("新規登録","/signup") %>
        </li>
      <% end %>
      </ul>
    </header>
    <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <% end %>
    <%= yield %>
</body>
</html>
<div class="events-wrapper">
  <div class="container">
    <div class="center-inner">
      <div class="events">
        <div class="events-menu">
          <p class="menu-title">new calendar</p>
        </div>
        <div class="events-display">
          <%= form_with model: @calendar, url:"/calendars/#{@calendar.id}/update" do |f| %>
            <div class="main-select">
              <div class="form-group form-check">
                <%= link_to('',"/events/index", class:"fas fa-2x fa-arrow-left back-icon") %>
                <button type="submit" class="submit"><i class="fas fa-2x fa-check"></i></button>
              </div>
              <div class="form-group">
                <%= f.text_field :title, class:"group-text",placeholder:"カレンダー名" %>
              </div>
              <div class="form-group">
                <p class="calendar-text">カレンダーの色を決めよう</p>
              </div>
              <div class="form-group">
                <%= f.collection_radio_buttons(:color_id, @colors, :id, :color_type, include_hidden: false) do |b| %>
                  <%= b.label {b.radio_button} %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="events-wrapper">
  <div class="container">
    <div class="center-inner">
      <div class="events">
        <div class="events-menu">
          <p class="menu-title">new calendar</p>
        </div>
        <div class="events-display">
          <%= form_with model: @calendar do |f| %>
            <div class="main-select">
              <div class="form-group form-check">
                <%= link_to('', calendars_path, class:"fas fa-2x fa-arrow-left back-icon") %>
                <button type="submit" class="submit"><i class="fas fa-2x fa-check"></i></button>
              </div>
              <div class="form-group">
                <%= f.text_field :title, class:"group-text",placeholder:"カレンダー名" %>
              </div>
              <div class="form-group">
                <p class="calendar-text">カレンダーの色を決めよう</p>
              </div>
              <div class="form-group radio btn-group btn-group-vertical" data-toggle="buttons">
              <% @colors.each do |c| %>
                  <label class="btn" id="color_<%= c.id %>">
                    <input type="radio" name="calendar[color_id]" value="<%= c.id %>" ><i class="fa fa-circle-o fa-2x"></i><i class="fa fa-dot-circle-o fa-2x"></i><span class="radio-color"></span>
                  </label>
              <% end %>
            </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



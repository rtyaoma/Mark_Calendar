<div class="events-wrapper">
  <div class="container">
    <div class="inner">
        <div class="split-box inner-left">
          <div id="calendar"></div>
        </div>
        <div class="split-box inner-right new_event">
          <div class="events">
            <div class="events-menu">
              <ul class="nav">
                <li class="nav-title"><p>new task</p></li>
              </ul>	
            </div>
            <div class="events-display">
            <%= form_with model: @task, url:"/tasks/#{@task.id}/update" do |f| %>
              <div class="form-group">
                <%= f.text_field :title, class:"group-text", placeholder:"タイトル" %>
              </div>
              <div class="form-group">
                <div class="group-label">
                  <%= f.label :deadline_date, "締切" %>
                </div>
                <div class="group-inner">
                  <%= f.date_select :deadline_date %>
                </div>
              </div>
              <div class="form-group">
              <%= f.select :status, [['未完了',false],['完了',true]],{} %>
              </div>
              <div class="form-group">
                <%= f.text_area :description, class:"group-text", placeholder:"メモ" %>
              </div>
              <div class="form-group">
                <%= f.submit value:"登録",class: "btn" %>
                <%= link_to("戻る", "/tasks/index", class: "btn") %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>